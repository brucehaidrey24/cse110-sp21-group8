{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "extends": ["eslint:recommended", "prettier"],
    "plugins": ["prettier"],
    "rules": {
      "prettier/prettier": "warn",
      "indent": ["warn", 2],
      "semi": ["warn", "always"],
      "quotes": ["warn", "single"],
      "no-unused-vars": "warn"
    }
}
